{
  "name": "taya7-sayeb",
  "version": "1.0.0",
  "description": "TAYA7 SAYEB - FPS Game",
  "main": "main.js",
  "author": "TAYA7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamedcherif-pixel/fpsgame.git"
  },
  "scripts": {
    "start": "electron .",
    "convert-icon": "node convert-icon.js",
    "create-assets": "node create-installer-assets.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:installer": "electron-builder --win nsis",
    "build:win:portable": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "package": "npm run create-assets && npm run build:win",
    "release": "electron-builder --win --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "image-size": "^2.0.2",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.taya7.sayeb",
    "productName": "TAYA7 SAYEB",
    "copyright": "Copyright Â© 2026 TAYA7",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "game/**/*",
      "icon.png",
      "icon.ico"
    ],
    "extraResources": [
      {
        "from": "../gamephoto.jpg",
        "to": "gamephoto.jpg"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "license": "build/license.txt",
      "shortcutName": "TAYA7 SAYEB",
      "uninstallDisplayName": "TAYA7 SAYEB",
      "menuCategory": "Games",
      "installerLanguages": [
        "en_US"
      ],
      "language": "1033"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mohamedcherif-pixel",
        "repo": "fpsgame",
        "releaseType": "release"
      }
    ]
  }
}
